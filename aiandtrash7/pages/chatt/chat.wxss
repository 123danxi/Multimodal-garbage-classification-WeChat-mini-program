.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

#c {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: transparent;
}

.window1 {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70%;
  background-color: rgba(97, 97, 97, 0.5);
  display: flex;
  flex-direction: column;
  z-index: 2;
  box-shadow: 0px -1px 10px rgba(0, 0, 0, 0.5);
}

.message-container {
  flex: 1;
  overflow-y: scroll;
 
  padding: 10px;
}

.message-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}

.message-row.user {
  justify-content: flex-end;
  
}

.message-row.bot {
  justify-content: flex-start;
}

.bot-image {
  width: 100px; /* 根据需要调整图片宽度 */
  height: auto; /* 保持图片比例 */
  margin: 5px 0;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 0 18px;
}

.bubble {
  max-width: 70%;
  padding: 10px;
  border-radius: 10px;
}

.user-message {
  background-color: #007aff;
  color: white;
  margin-left: -10px;
}

.bot-message {
  background-color: #e5e5ea;
  color: black;
  margin-right: 10px;
}

.input-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.7);
}

.input-box {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
  margin-right: 10px;
}

.send-button {
  width: 40px;
  height: 40px;
  cursor: pointer;
}

.givepic-icon{
  width: 40px;
  height: 40px;
  cursor: pointer;
}

.nav-icon {
  position: absolute;
  top: 10px;
  right:10px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  z-index: 2;
  cursor: pointer;
}
